str[][] mat = [
        [".", ".", ".", "."],
        [".", ".", ".", "."],
        [".", ".", ".", "."],
        [".", ".", ".", "."],
        [".", ".", ".", "."],
        [".", ".", ".", "."],
        [".", ".", ".", "."]
];

int px = 0;
int py = 0;

while (1) {
        int key = getch();
        if (key == 'q')
                break;
        else if (key == 'h') // left
                px = px - 1;
        else if (key == 'l') // right
                px = px + 1;
        else if (key == 'k') // up
                py = py - 1;
        else if (key == 'j') // down
                py = py + 1;

        clear();
        for (int y = 0; y < arrlen(mat); y = y + 1) {
                for (int x = 0; x < arrlen(mat[y]); x = x + 1) {
                        if (y == py && x == px)
                                print("@");
                        else
                                print(mat[y][x]);
                }
                println();
        }
}
